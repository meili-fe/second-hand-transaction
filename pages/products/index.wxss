page {
  background: #f2f2f2;
  min-height: 100%;
  padding-bottom: 20rpx;
  position: relative;
}
.list {
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
  display: flow-root;
}

.list .good {
  background-color: #fff;
  width: 345rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  float: left;
}
.good:nth-child(odd){
  margin-right: 20rpx;
}
.list .good:last-child{
  margin-bottom: 20rpx;
}
.good .good_image {
  position: relative;
}

.good .good_image .image {
  border-top-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
}
.list .status {
  position: absolute;
  width: 118rpx;
  height: 80rpx;
  left: 50%;
  top: 50%;
  margin-left: -59rpx;
  margin-top: -40rpx;
}


.list .image {
  width: 100%;
}
.list .detail {
  padding: 0 20rpx;
}
.list .title {
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  height: 80rpx;
  display: block;
  margin-bottom: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow:ellipsis;
  white-space:normal;

}
.list .footer {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  align-items: flex-end;
}

.list .price {
  color: #ff0000;
}
.list .price .p {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
}

.list .price .number {
  font-family: HelveticaNeue-Medium;
  font-size: 40rpx;
  letter-spacing: 0;
}

.list .bottom {
  display: flex;
  justify-content: space-between;
  color: #888;
  font-size: 22rpx;
  margin-top: 8rpx;
}
.fill {
  position: absolute;
  bottom: 0;
  height: 20rpx;
  width: 100%;
  background: #f2f2f2;
}