.list .good:first-child {
  margin-top: 0;
}

.list .status {
  position: absolute;
  width: 118rpx;
  height: 80rpx;
  left: 50%;
  top: 50%;
  margin-left: -59rpx;
  margin-top: -40rpx;
}

.list .image {
  /* width: 374rpx; */
  /* height: 456rpx; */
  /* width: 100%; */
  display: block;
}

.list .title {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #222222;
  letter-spacing: 0;
  max-height: 80rpx;
  overflow: hidden;
  display: block;
}

.list .wrap {
  padding: 20rpx;
