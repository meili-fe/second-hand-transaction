<!--pages/detail/detail.wxml-->
<view class="container" wx:if="{{loaded}}">
  <view class="user">
    <image src="../../images/good.png" class="avatar"></image>
    <view class="info">
      <text class="name">小米</text>
      <text class="time">{{update_time}}</text><text style="display: none">浏览79</text>
    </view>
  </view>

  <view class="detail">
    <view class="price">
      <text class="p">￥</text>
      <text class="number">{{price}}</text>
    </view> 

    <view class="text">{{description}}</view>

    <image class="image" src="{{item}}" mode="aspectFill" wx:for="{{img_list}}" wx:key="{{index}}"></image>
    <!-- <image class="image" src="../../images/good.png" mode="aspectFill"></image> -->
    <!-- <image class="image" src="../../images/good.png" mode="aspectFill"></image> -->
  </view>

  <view class="operate">
    <text bindtap="jump" data-id="121212">编辑</text>
    <text>删除</text>
  </view>

</view>