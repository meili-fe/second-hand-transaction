/* pages/publish/publish.wxss */
.container {
  padding: 17rpx 58rpx 50rpx 58rpx;
  width: 100%;
  overflow: hidden;
  height: auto;
}

input {
}

.title {
  border-bottom: 2rpx solid #f3f3f3;
  padding: 15rpx 0;
  margin-bottom: 20rpx;
}

textarea {
  height: 300rpx;
}
.placeholder {
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #aaaaaa;
  letter-spacing: 0;
  line-height: 56rpx;
}

.upload {
  display: flex;
  flex-wrap: wrap;
  width: 110%;
  /* justify-content: space-between; */
}

.upload .image {
  width: 192rpx;
  height: 192rpx;
  margin-bottom: 20rpx;
  margin-right: 20rpx;
  position: relative;
}

.upload .image image {
  width: 192rpx;
  height: 192rpx;
}

.upload .image .del {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: -20rpx;
  top: -20rpx;
  z-index: 2;
  border-radius: 50%;
}

.info {
  border-top: 2rpx solid #f3f3f3;
  margin-top: 40rpx;
  margin-bottom: 176rpx;
}

.info .item {
  height: 108rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #f3f3f3;
  justify-content: space-between;
}
.info .icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 30rpx;
}

.info .label {
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
}

.info .value {
  font-size: 34rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.info .input {
  text-align: right;
}

.publish {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 50rpx;
}

.publish text {
  display: block;
  width: 320rpx;
  background: #ffe60d;
  border-radius: 36rpx;
  height: 72rpx;
  font-family: PingFangSC-Medium;
  font-size: 32rpx;
  color: #222222;
  letter-spacing: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
